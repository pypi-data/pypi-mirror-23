#!/usr/bin/python

import sys

from nova_ha_monitor.config import ConsulComputeConfig
from nova_ha_monitor.checks import check_ssh

def main():
    if len(sys.argv) <= 1:
        print "Missing node address.."
        sys.exit(0)

    host = sys.argv[1]

    conf = ConsulComputeConfig(host)
    ssh_user = conf.get_ssh_user()
    ssh_password = conf.get_ssh_password()

    sys.exit(check_ssh(host, user=ssh_user, password=ssh_password))

if __name__ == "__main__":
    main()

