#!/usr/bin/env python3
#
#

""" Die medicijnen zijn gif en het toedienen ervan is stafbaar !! """

from botlib.utils import parse_cli, reset, startup, enable_history
from botlib.space import kernel, exceptions
from botlib import __version__

import os

try:
    startup()
except:
    pass

def main():
    cfg = parse_cli()
    cfg.name = "BOTLIB"
    cfg.version = __version__
    enable_history()
    kernel.boot(cfg)
    kernel.wait()
    kernel.shutdown()

if __name__ == "__main__":
    try:
        main()
    except KeyboardInterrupt:
        print("")
    if exceptions:
        for ex in exceptions:
            print(ex)
    reset()
    os._exit(0)
