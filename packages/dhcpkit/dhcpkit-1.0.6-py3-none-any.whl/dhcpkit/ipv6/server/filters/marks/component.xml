<component xmlns="https://raw.githubusercontent.com/zopefoundation/ZConfig/master/doc/schema.dtd"
           prefix="dhcpkit.ipv6.server.filters.marks.config">

    <sectiontype name="marked-with"
                 extends="filter_factory_base"
                 implements="filter_factory"
                 datatype=".MarkedWithFilterFactory">

        <description>
            Filter incoming messages based on the mark set by i.e. the listener.
        </description>

        <example><![CDATA[
            <marked-with bla>
                <ignore-request/>
            </marked-with>
        ]]></example>
    </sectiontype>
</component>
